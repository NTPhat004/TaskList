@model SubTaskModel

<li class="list-group-item d-flex justify-content-between align-items-center" data-subtask-id="@Model.Id">
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="subtask-@Model.Id">
        <div class="form-check-label" for="subtask-@Model.Id">
            <div class="step-title">@Model.Title</div>
            <div class="step-description">Hạn: @Model.DueDate?.ToString("dd/MM/yyyy")</div>
        </div>
    </div>
</li>
